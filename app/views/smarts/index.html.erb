<%= link_to 'Home', controller: 'welcome' %>
<%= link_to 'New Pokemon', new_smart_path %>
<h1>Smart</h1>

<table>
  <tr>
    <th>Pokemon</th>
    <th>Trainer</th>

    <th colspan="5"></th>
  </tr>
 
  <% @smarts.each do |smart| %>
    <tr>
      <td><%= smart.pokemon %></td>
      <td><%= smart.trainer %></td>
     
      <td><%= link_to 'Show', smart_path(smart) %></td>
      <td><%= link_to 'Edit', edit_smart_path(smart) %></td>
      <td><%= link_to 'Destroy', smart_path(smart),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
