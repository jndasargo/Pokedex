<%= link_to 'Home', controller: 'welcome' %>
<%= link_to 'New Pokemon', new_tough_path %>
<h1>Tough</h1>

<table>
  <tr>
    <th>Pokemon</th>
    <th>Trainer</th>

    <th colspan="5"></th>
  </tr>
 
  <% @toughs.each do |tough| %>
    <tr>
      <td><%= tough.pokemon %></td>
      <td><%= tough.trainer %></td>
     
      <td><%= link_to 'Show', tough_path(tough) %></td>
      <td><%= link_to 'Edit', edit_tough_path(tough) %></td>
      <td><%= link_to 'Destroy', tough_path(tough),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
